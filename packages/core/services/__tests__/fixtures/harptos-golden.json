    "intercalaryBoundaries": {
      "description": "Test weekday continuity across all intercalary boundaries",
      "cases": [
        {
          "name": "Hammer 30 → Midwinter → Alturiak 1",
          "boundary": "Midwinter",
          "beforeDay": 29,
          "intercalaryDay": 30,
          "afterDay": 31,
          "expected": {
            "beforeWeekday": "10th Day",
            "intercalaryWeekday": "",
            "afterWeekday": "1st Day"
          }
        },
        {
          "name": "Tarsakh 30 → Greengrass → Mirtul 1",
          "boundary": "Greengrass",
          "beforeDay": 120,
          "intercalaryDay": 121,
          "afterDay": 122,
          "expected": {
            "beforeWeekday": "10th Day",
            "intercalaryWeekday": "",
            "afterWeekday": "1st Day"
          }
        },
        {
          "name": "Flamerule 30 → Midsummer → Eleasis 1",
          "boundary": "Midsummer",
          "beforeDay": 211,
          "intercalaryDay": 212,
          "afterDay": 213,
          "expected": {
            "beforeWeekday": "10th Day",
            "intercalaryWeekday": "",
            "afterWeekday": "1st Day",
            "note": "Day 213 falls on 1st Day due to intercalary pause"
          }
        },
        {
          "name": "Eleint 30 → Highharvestide → Marpenoth 1",
          "boundary": "Highharvestide",
          "beforeDay": 272,
          "intercalaryDay": 273,
          "afterDay": 274,
          "expected": {
            "beforeWeekday": "10th Day",
            "intercalaryWeekday": "",
            "afterWeekday": "1st Day"
          }
        },
        {
          "name": "Uktar 30 → Feast of the Moon → Nightal 1",
          "boundary": "Feast of the Moon",
          "beforeDay": 333,
          "intercalaryDay": 334,
          "afterDay": 335,
          "expected": {
            "beforeWeekday": "10th Day",
            "intercalaryWeekday": "",
            "afterWeekday": "1st Day"
          }
        }
      ]
    },
    "leapYearTests": {
      "description": "Shieldmeet tests (leap year = Year % 4 == 0)",
      "notes": [
        "1493 DR % 4 != 0, so 1493 is NOT a leap year",
        "1492 DR % 4 == 0, so 1492 IS a leap year",
        "Shieldmeet occurs after Midsummer in leap years, adding 1 day to the year (366 total)"
      ],
      "leapYear": 1492,
      "nonLeapYear": 1493,
      "cases": [
        {
          "name": "1492 DR is a leap year",
          "year": 1492,
          "expectedLeap": true
        },
        {
          "name": "1493 DR is NOT a leap year",
          "year": 1493,
          "expectedLeap": false
        },
        {
          "name": "1496 DR is a leap year",
          "year": 1496,
          "expectedLeap": true
        },
        {
          "name": "1500 DR is a leap year",
          "year": 1500,
          "expectedLeap": true
        },
        {
          "name": "Year 0 is a leap year",
          "year": 0,
          "expectedLeap": true
        },
        {
          "name": "Year 4 is a leap year",
          "year": 4,
          "expectedLeap": true
        }
      ]
    },
    "eraTests": {
      "description": "Era suffix tests (BD = Before Dalereckoning, DR = Dalereckoning)",
      "cases": [
        {
          "name": "Year 0 uses BD era (Before Dalereckoning starts at endYear 1)",
          "year": 0,
          "expectedSuffix": "BD"
        },
        {
          "name": "Year 1 DR",
          "year": 1,
          "expectedSuffix": "DR"
        },
        {
          "name": "Year 1492 DR",
          "year": 1492,
          "expectedSuffix": "DR"
        },
        {
          "name": "Year -1 uses BD era",
          "year": -1,
          "expectedSuffix": "BD"
        },
        {
          "name": "Year -100 uses BD era",
          "year": -100,
          "expectedSuffix": "BD"
        }
      ]
    },
    "highIntegerTests": {
      "description": "Stress tests with very large day counts",
      "cases": [
        {
          "name": "Day 1,000,000",
          "absoluteDay": 1000000,
          "expected": {
            "yearApprox": 4231,
            "note": "1,000,000 days ÷ 365 days/year ≈ 2739 years from 1492 DR"
          }
        },
        {
          "name": "Day 100,000,000",
          "absoluteDay": 100000000,
          "expected": {
            "note": "Should handle without overflow or precision loss"
          }
        }
      ]
    },
    "monthTransitionTests": {
      "description": "Standard month transitions (non-intercalary)",
      "cases": [
        {
          "name": "Ches 30 → Tarsakh 1",
          "beforeDay": 90,
          "afterDay": 91,
          "expected": {
            "beforeMonth": "Ches",
            "afterMonth": "Tarsakh",
            "weekdayContinuity": true
          }
        },
        {
          "name": "Mirtul 30 → Kythorn 1",
          "beforeDay": 151,
          "afterDay": 152,
          "expected": {
            "beforeMonth": "Mirtul",
            "afterMonth": "Kythorn",
            "weekdayContinuity": true
          }
        },
        {
          "name": "Kythorn 30 → Flamerule 1",
          "beforeDay": 181,
          "afterDay": 182,
          "expected": {
            "beforeMonth": "Kythorn",
            "afterMonth": "Flamerule",
            "weekdayContinuity": true
          }
