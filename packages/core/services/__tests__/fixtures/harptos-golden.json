          "name": "Marpenoth 30 → Uktar 1",
          "beforeDay": 303,
          "afterDay": 304,
          "expected": {
            "beforeMonth": "Marpenoth",
            "afterMonth": "Uktar",
            "weekdayContinuity": true
          }
        }
      ]
    },
    "yearRolloverTests": {
      "description": "Multi-year progression tests",
      "cases": [
        {
          "name": "5 years from start (accounting for leap years)",
          "absoluteDay": 1826,
          "expected": {
            "year": 1498,
            "note": "1493-1497: 365 + 365 + 365 + 366 + 365 = 1826 days (one leap year: 1496)"
          }
        },
        {
          "name": "10 years from start (accounting for leap years)",
          "absoluteDay": 3652,
          "expected": {
            "year": 1503,
            "note": "1493-1502: 2 leap years (1496, 1500) = 10*365 + 2 = 3652 days"
          }
        },
        {
          "name": "100 years from start (accounting for leap years)",
          "absoluteDay": 36525,
          "expected": {
            "year": 1593,
            "note": "1493-1592: 25 leap years (every 4 years) = 100*365 + 25 = 36,525 days"
          }
        }
      ]
    }
  }
