{
  "calendar": {
    "id": "harptos-full",
    "name": "Calendar of Harptos (Forgotten Realms)",
    "description": "Golden master test fixtures - manually verified against Forgotten Realms canon"
  },
  "notes": [
    "All test cases manually verified from Forgotten Realms Wiki",
    "Source: https://forgottenrealms.fandom.com/wiki/Calendar_of_Harptos",
    "Year structure: 12 months × 30 days = 360 days + 5 intercalary days = 365 days/year",
    "Leap years: Year % 4 == 0 adds Shieldmeet after Midsummer (366 days)",
    "Weekday cycle: 10-day 'tenday' - intercalary days do NOT advance weekday",
    "Starting year: 1492 DR (default for 5e campaigns)"
  ],
  "testCases": {
