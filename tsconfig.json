{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES6"
    ],
    "paths": {
      "@quartermaster/core/*": ["packages/core/*"]
    }
  },
  "exclude": [
    "node_modules",
    "examples",
    "docs",
    "dist",
    "**/dist"
  ]
}
